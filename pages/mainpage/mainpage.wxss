/* 背景 */
.UCenter-bg{
  background-color: rgb(166, 227, 233);
  height: 350rpx;
  display: flex;
  justify-content: center;
  padding-top: 20rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: rgb(3, 48, 48);
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

.UCenter-bg .user-avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 5rpx;
  justify-content: center;
}